<div class="container body-content">
    <div class="row">
        <div class="col-md-12">
            <article>
                <header>
                    <h2>{{title}}</h2>
                </header>

                <p>
                    {{content}}
                </p>
                {{#if imagesPath}}
                    <img src="{{imagesPath}}" alt="Article image" width="300">
                {{/if}}

                <small class="author">
                    {{author.fullName}}
                    <br/>
                    {{formattedDate}}
                </small>

                <footer>
                    <div class="pull-right">
                        {{#if userModifierRight}}
                            <a class="btn btn-success btn-xs" href="/article/edit/{{id}}">Edit &raquo;</a>
                            <a class="btn btn-danger btn-xs" href="/article/delete/{{id}}">Delete &raquo;</a>
                        {{/if}}
                        <a class="btn btn-default btn-xs" href="/">Back &raquo;</a>
                    </div>
                </footer>
            </article>
        </div>
    </div>
</div>
